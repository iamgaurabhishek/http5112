@model n01605783Cumulative3.Models.Teacher
@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

<div id="containershow">
    <nav>
        <a class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark navbar-brand" href="/Teacher/Show/@Model.TeacherId">Back To Teacher</a>
    </nav>
    <h2>Update @Model.TeacherFirstName </h2>
    <form method="POST" action="/Teacher/Update/@Model.TeacherId">
     
        <div>@Model.TeacherId</div>
        <div class="inputrow">
            <label for="TeacherFirstName">First Name:</label>
            <input type="text" id="TeacherFirstName" name="TeacherFirstName" value="@Model.TeacherFirstName" />
          
        </div>
        <div class="inputrow">
            <label for="TeacherLastName">Last Name:</label>
            <input type="text" id="TeacherLastName" name="TeacherLastName" value="@Model.TeacherLastName" />

        </div>
        <div class="inputrow">
            <label for="TeacherHireDate">Hire Date:</label>
            <input type="date" id="TeacherHireDate" name="TeacherHireDate" value="@Model.TeacherHireDate.ToString("yyyy-MM-dd")" />
        </div>
        <div class="inputrow">
            <label for="TeacherSalary">Salary:</label>
            <input type="number" id="TeacherSalary" name="TeacherSalary" value="@Model.TeacherSalary" />
        </div>
        <div class="inputrow">
            <label for="TeacherEmployeeNumber">Employee Number:</label>
            <input type="text" id="TeacherEmployeeNumber" name="TeacherEmployeeNumber" value="@Model.TeacherEmployeeNumber" />
        </div>
        <div class="inputrow">
            <input type="submit" value="Update Teacher" />
        </div>
    </form>
</div>